@page
@using JobRanger.Models
@model JobRanger.Pages.Interactions.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(item => item.Interaction.InteractionTypeName)</h1>

<h4>for @Html.DisplayFor(job => job.Interaction.Job.Name) at @Html.DisplayFor(e => e.Interaction.Job.Employer.Name)</h4>
<p>@string.Format("Scheduled on {0:d}", Model.Interaction.TargetTime) </p>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Interaction.Id" />
            <input type="hidden" asp-for="Interaction.JobId" />
            <div class="form-group">
                <label asp-for="Interaction.TargetTime" class="control-label"></label>
                <input asp-for="Interaction.TargetTime" class="form-control" />
                <span asp-validation-for="Interaction.TargetTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interaction.InteractionTypeName" class="control-label"></label>
                <select asp-for="Interaction.InteractionTypeName" class="form-control">
                    <option>Choose an option</option>
                    <option>Applied</option>
                    <option>Apply</option>
                    <option>Call</option>
                    <option>Write</option>
                    <option>Email</option>
                    <option>Visit</option>
                    <option>Interview</option>
                    <option>Phone Interview</option>
                    <option>Accept</option>
                    <option>Decline</option>
                    <option>Will Follow Up</option>
                    <option>Did Follow Up</option>
                    <option>Request Info</option>
                    <option>Connect on LinkedIn/email</option>
                    <option>Employer Emailed</option>
                    <option>Offer</option>
                </select>
                <span asp-validation-for="Interaction.InteractionTypeName" class="text-danger"></span>
            </div>
          
                <div class="form-check m-4" >
                    <label asp-for="Interaction.ToDo" class="control-label">Is this a to-do?</label><br/>
                    <input type="radio" asp-for="Interaction.ToDo" class="form-check-input" value="true" checked>Yep<br/>
                    <input type="radio" asp-for="Interaction.ToDo" class="form-check-input" value="false"  >Nope
                    <span asp-validation-for="Interaction.ToDo" class="text-danger"></span>
                </div>
            

            <div class="form-group">
                <label asp-for="Interaction.Notes" class="control-label"></label>
                <textarea asp-for="Interaction.Notes" class="form-control"></textarea>
                <span asp-validation-for="Interaction.Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a> |
    <a href="javascript: history.go(-1)">Go Back to Previous Page</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}