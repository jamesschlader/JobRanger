@page
@model JobRanger.Pages.Job.CreateModel

@{
    ViewData["Title"] = "Job Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>New Job</h1>

<hr/>
<div class="row">
    <div class="col-md-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.Name" class="control-label"></label>
                <input asp-for="Job.Name" class="form-control"/>
                <span asp-validation-for="Job.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Number" class="control-label">Job Number</label>
                <input asp-for="Job.Number" class="form-control"/>
                <span asp-validation-for="Job.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Description" class="control-label">Description</label>
                <textarea asp-for="Job.Description" class="form-control" ></textarea>
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Employer" class="control-label">Employer</label>
                <select asp-for="Job.EmployerId" class="form-control" asp-items="@Model.EmployerNameSelectList">
                    <option value="">-- Select Employer --</option>
                </select>
                <span asp-validation-for="Job.EmployerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}