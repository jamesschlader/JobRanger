@page "{id:int}"
@model JobRanger.Pages.Agency.EditModel

@{
    ViewData["Title"] = "Agency Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Model.Agency.Name</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Agency.Id" />
            <div class="form-group">
                <label asp-for="Agency.Name" class="control-label"></label>
                <input asp-for="Agency.Name" class="form-control" />
                <span asp-validation-for="Agency.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency.WebSite" class="control-label"></label>
                <input asp-for="Agency.WebSite" class="form-control" />
                <span asp-validation-for="Agency.WebSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency.IconSrc" class="control-label"></label>
                <select asp-for="Agency.IconSrc" class="form-control">
                    <option>lib/images/glassdoor.svg</option>
                    <option>lib/images/indeed-logo.svg</option>
                    <option>lib/images/monster.svg</option>
                    <option>lib/images/ziprecruiter-blacktext.svg</option>
                    <option>lib/images/dice-logo-icon.svg</option>
                    <option>lib/images/careerarc-icon.svg.svg</option>
                    <option>lib/images/idealist-logo.svg</option>
                    <option>lib/images/careercloud-icon.png</option>
                    <option>lib/images/stackoverflow-logo.svg</option>
                    <option>lib/images/snag-logo.svg</option>
                    <option>lib/images/simplyhired-logo.svg</option>
                    <option>lib/images/talentzoo-logo (1).svg</option>
                    <option>lib/images/techcareer-logo.svg</option>
                    <option>lib/images/logo-upwork.svg</option>
                    <option>lib/images/USAJOBS.gov_logo.svg</option>
                    <option>lib/images/college-recruiter.svg</option>
                    <option>lib/images/craigslist.svg</option>
                    <option>lib/images/culintro.svg</option>
                    <option>lib/images/efinancial.svg</option>
                    <option>lib/images/healthcarejobsitecom.svg</option>
                    <option>lib/images/IEEE_logo.svg</option>
                    <option>lib/images/internships.svg</option>
                    <option>lib/images/jobappsonline-logo (1).svg</option>
                    <option>lib/images/linkup_logo.svg</option>
                    <option>lib/images/mashable-logo.svg</option>
                    <option>lib/images/salesgravy-logo (2).svg</option>
                    <option>lib/images/mediabistro.svg</option>
                    <option>lib/images/ladders.svg</option>
                    <option>lib/images/linkedin.svg</option>
                    
                    
                </select>
                <span asp-validation-for="Agency.IconSrc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a> |
    <a href="javascript: history.go(-1)">Go Back to Previous Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
