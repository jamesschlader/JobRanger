@page "{id:int}"
@model JobRanger.Pages.Agency.EditModel

@{
    ViewData["Title"] = "Agency Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Agency</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Agency.Id" />
            <div class="form-group">
                <label asp-for="Agency.Name" class="control-label"></label>
                <input asp-for="Agency.Name" class="form-control" />
                <span asp-validation-for="Agency.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency.WebSite" class="control-label"></label>
                <input asp-for="Agency.WebSite" class="form-control" />
                <span asp-validation-for="Agency.WebSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agency.IconSrc" class="control-label"></label>
                <select asp-for="Agency.IconSrc" class="form-control">
                    <option>lib/images/glassdoor.svg</option>
                    <option>lib/images/indeed-logo-768x199.png</option>
                    <option>lib/images/monster-com-logo-768x126.png</option>
                    <option>lib/images/ziprecruiter-blacktext.svg</option>
                </select>
                <span asp-validation-for="Agency.IconSrc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a> |
    <a href="javascript: history.go(-1)">Go Back to Previous Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
