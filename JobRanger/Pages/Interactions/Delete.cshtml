    ViewData["Title"] = "Interaction Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete Interaction</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Interaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interaction.TargetTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interaction.TargetTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interaction.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interaction.Type.Id)
