@model JobRanger.Pages.Interactions.DetailsModel

@{
    ViewData["Title"] = "Interaction Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Interaction.Job.Name)</h1>
<h4>at @Html.DisplayFor(model=>model.Interaction.Job.Employer.Name)</h4>
<br/>
<div>
    <h4>@Html.DisplayFor(model => model.Interaction.InteractionTypeName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interaction.TargetTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interaction.TargetTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interaction.InteractionTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interaction.InteractionTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interaction.Notes)
        </dt>
        <dd class="col-sm-10">
            <p style="width: auto; height: 100px;overflow: auto"> @Html.DisplayFor(model => model.Interaction.Notes)</p>
           
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Interaction.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a> |
    <a href="javascript: history.go(-1)">Go Back to Previous Page</a>
</div>
